---

  <button id='theme-switch' data-theme='light' type='button' class=' c-gray11'>
    <img
      class='c-gray11 dark:filter-invert display-none dark:block'
      src='/icons/moon.svg'
      alt=''
      aria-hidden='true'
      height={20}
      width={20}
    />
    <span class='sr-only display-none dark:inline'>Dark</span>
    <img
      class='c-gray11 dark:filter-invert dark:display-none'
      src='/icons/sun.svg'
      alt=''
      aria-hidden='true'
      height={20}
      width={20}
    />
    <span class='sr-only dark:display-none'>Light</span>
  </button>

<script >
  const button = document.querySelector('#theme-switch');
  button.addEventListener('click', (event) => {
      const doc = document.documentElement;
      const currentTheme  = doc.dataset.theme;
      const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
      doc.classList.replace(currentTheme, newTheme) 
      doc.setAttribute('data-theme', newTheme );
      }
    );
  </script >


