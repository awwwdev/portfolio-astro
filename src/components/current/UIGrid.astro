---
import UIGridHLine from './UIGridHLine.astro';
import UIGridVLine from './UIGridVLine.astro';
const gridRows = 14;
const gridColumns = 15;
---

<div class='grid b-1 b-grayA-2 h-140 grid-cols-14 grid-rows-12'>
  {
    [...Array(gridRows).keys()].map((row) => {
      return <UIGridHLine row={row} />;
    })
  }
  {
    [...Array(gridColumns).keys()].map((column) => {
      return <UIGridVLine column={column} />;
    })
  }
  <div style='grid-column: 1/5; grid-row: 1/3'>
    <div class='bg-red8 h-full flex items-center justify-center p-2 font-heading text-5xl'>I Design</div>
  </div>
  <div style='grid-column: 5/7; grid-row: 3/5'>
    <div class='bg-red8 h-full flex items-center justify-center p-2 font-heading text-5xl'>and</div>
  </div>
  <div style='grid-column: -6/-1; grid-row: -8/-5'>
    <div class='bg-red8 h-full flex items-center justify-center p-2 font-heading text-5xl'>Develop</div>
  </div>
  <div style='grid-column: 3/-3; grid-row: -4/-1'>
    <div class='bg-red8 h-full flex items-center justify-center p-2 font-heading text-5xl'>User Interfaces</div>
  </div>
</div>
