---
import GlobalLayout from '../layouts/GlobalLayout.astro';

import DarsoonCard from '../components/DarsoonCard.astro';
import DbiliaCard from '../components/DbiliaCard.astro';
import MomentaCard from '../components/MomentaCard.astro';
import Toolkit from '../components/Toolkit.astro';
import Intro from '../components/Intro.astro';
import Emoji from '../components/Emoji.astro';
import About from '../components/About.astro';
import BlogSection from '../components/BlogSection.astro';
import TipsSection from '../components/TipsSection.astro';
---

<GlobalLayout>
  <div class=''>
    <section aria-label='introduction' class='rd-xl py-8 min-h-80 max-w-page mx-auto sm:px-8 px-4'>
      <Intro />
    </section>
    <section aria-label='Works' id='works' class='mt-50 rd-xl max-w-page mx-auto'>
      <div class='flex gap-1 items-baseline sm:px-8 px-4'>
        <h2 class='H1'>Works</h2>
        <Emoji name='fire' />
      </div>
      <ul class='mt-20 space-y-12 sm:space-y-32'>
        <DarsoonCard />
        <DbiliaCard />
        <MomentaCard />
      </ul>
    </section>
    <section aria-label='Toolkit' id='toolkit' class='mt-50 rd-xl max-w-page mx-auto'>
      <Toolkit />
    </section>
    <section aria-label='Blog' id='blog' class='my-50 rd-xl'>
      <BlogSection />
    </section>
     <section aria-label='Blog' id='blog' class='my-50 rd-xl'>
      <TipsSection />
    </section>
    <section
      slot='about'
      aria-label='About me'
      id='about'
      class='my-50 rd-xl space-y-4 max-w-page mx-auto sm:px-8 px-4'
    >
      <About />
    </section>
  </div>
</GlobalLayout>

